<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="TextView" />



    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtStatus"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/stop_sign" />

    <Switch
        android:id="@+id/swConn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Bluetooth Connection" />

    <Spinner
        android:id="@+id/spMotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/swConn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/swConn" />

    <TextView
        android:id="@+id/txtMotorSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spMotor"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Motor Speed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBarMotorSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtMotorSpeed" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekBarMotorSpeed"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/speedMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/speedMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="TextView" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fwdBtn"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:src="@drawable/forward"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:layout_below="@+id/fwdBtn"
        android:layout_alignRight="@+id/fwdBtn"
        android:layout_alignEnd="@+id/fwdBtn"
        android:src="@drawable/backward"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftBtn"
        android:layout_below="@+id/fwdBtn"
        android:layout_toLeftOf="@+id/backBtn"
        android:layout_toStartOf="@+id/backBtn"
        android:src="@drawable/left"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightBtn"
        android:layout_below="@+id/fwdBtn"
        android:layout_toRightOf="@+id/backBtn"
        android:layout_toEndOf="@+id/backBtn"
        android:background="@null"
        android:src="@drawable/right" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elevUpBtn"
        android:layout_above="@+id/rightBtn"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignEnd="@+id/linearLayout1"
        android:src="@drawable/up"
        android:scaleType="matrix"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elevDownBtn"
        android:layout_alignBottom="@+id/rightBtn"
        android:layout_alignRight="@+id/elevUpBtn"
        android:layout_alignEnd="@+id/elevUpBtn"
        android:background="@null"
        android:src="@drawable/down" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cwBtn"
        android:background="@null"
        android:src="@drawable/cw"
        android:layout_above="@+id/rightBtn"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ccwBtn"
        android:src="@drawable/ccw"
        android:background="@null"
        android:layout_below="@+id/cwBtn"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directional Control"
        android:id="@+id/directional"
        android:layout_above="@+id/cwBtn"
        android:layout_alignRight="@+id/rightBtn"
        android:layout_alignEnd="@+id/rightBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turning"
        android:id="@+id/turning"
        android:layout_alignTop="@+id/directional"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevation"
        android:id="@+id/elevation"
        android:layout_alignTop="@+id/turning"
        android:layout_alignRight="@+id/elevUpBtn"
        android:layout_alignEnd="@+id/elevUpBtn" />

</RelativeLayout>